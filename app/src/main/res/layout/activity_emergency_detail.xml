<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Arrow Button -->
    <ImageButton
        android:id="@+id/backArrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:padding="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Patient's Name -->
    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient's Name: John Doe"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/backArrowButton"
        android:layout_marginTop="16dp"
        />

    <!-- Patient's Age -->
    <TextView
        android:id="@+id/patientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 30"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/patientName"
        android:layout_marginTop="8dp" />

    <!-- Patient's Sex -->
    <TextView
        android:id="@+id/patientSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex: Male"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/patientAge"
        android:layout_marginTop="8dp" />

    <!-- Accident Type -->
    <TextView
        android:id="@+id/accidentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Accident: Car Accident"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/patientSex"
        android:layout_marginTop="8dp" />

    <!-- Ambulance Service -->
    <TextView
        android:id="@+id/ambulanceService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambulance Service: ABC Ambulance"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/accidentType"
        android:layout_marginTop="8dp" />

    <!-- Current Status -->
    <TextView
        android:id="@+id/currentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status: Critical"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/ambulanceService"
        android:layout_marginTop="8dp" />

    <!-- Accept Button -->
    <Button
        android:id="@+id/acceptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textSize="20sp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:padding="10dp" />
</RelativeLayout>