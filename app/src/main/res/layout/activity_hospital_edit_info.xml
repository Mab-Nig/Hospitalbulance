<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Title: Hospital Information -->
    <TextView
        android:id="@+id/hospitalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Information"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Label: Hospital Name -->
    <TextView
        android:id="@+id/hospitalNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@id/hospitalInfoTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- EditText for Hospital Name -->
    <EditText
        android:id="@+id/hospitalNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hospitalNameLabel"
        android:layout_margin="20dp"
        android:background="@drawable/tag_background"
        android:padding="12dp" />

    <!-- Label: Address -->
    <TextView
        android:id="@+id/hospitalAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@id/hospitalNameEditText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <!-- EditText for Address -->
    <EditText
        android:id="@+id/hospitalAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hospitalAddressLabel"
        android:layout_margin="20dp"
        android:background="@drawable/tag_background"
        android:padding="12dp" />

    <!-- Save Info Button -->
    <Button
        android:id="@+id/saveInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@id/hospitalAddressEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Logout Section -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomNavigationView"
        android:layout_marginBottom="20dp">

        <!-- Logout Icon -->
        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_logout_red"
            android:layout_alignParentStart="true" />

        <!-- Logout Text -->
        <TextView
            android:id="@+id/logoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_toEndOf="@id/logoutButton"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        app:menu="@menu/navigation_menu" />

</RelativeLayout>