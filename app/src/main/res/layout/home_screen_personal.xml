<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#FFFFFF">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/sidebar"
        android:background="@drawable/sidebar">
    </ImageButton>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/resq_logo_icon">

    </ImageView>

    <TextView
        android:id="@+id/home_personal_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:textSize="10pt"
        android:text="Hi,User"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#C53434">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/home_personal_text1"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/red_back_per">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/record_personal">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/space_personal">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "40dp"
        android:layout_marginTop = "200dp"
        android:orientation = "vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your stats"
        android:textColor="@android:color/white"
        android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
        android:textSize="18sp"/>

        <TextView
            android:id = "@+id/blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group - O +ve"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id = "@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight - 65kgs"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id = "@+id/diabetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diabetic - No"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id = "@+id/allergies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergies - None"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="172dp"
            android:src = "@drawable/white_back_per">

        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="240dp"
            android:src = "@drawable/health_per">

        </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/taskbar">
    </ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/home_icon_white_quan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/document_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/personal_icon_black" />
    </RelativeLayout>



    <RelativeLayout android:id="@+id/sidebar_layout"
        android:layout_width="393dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#C53434">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/back_sidebar"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/icon_back">
        </ImageButton>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_marginTop="30dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/logo_3_personal" >

        </ImageView>

        <TextView
            android:id="@+id/home_personal_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:textSize="10pt"
            android:text="Setting"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#FFFFFF">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/home_personal_text2"
            android:padding="16dp">

            <!-- Edit Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="editInformationClicked"> <!-- Clickable action -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_info"
                    android:contentDescription="Edit Information" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- Payment -->
            <LinearLayout
                android:id="@+id/sidebar_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="paymentClicked">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_payment"
                    android:contentDescription="Payment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- Log out -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="logoutClicked">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logout"
                    android:contentDescription="Log out" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="8dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd = "140dp"
            android:background="@drawable/text_delete"
            android:id = "@+id/delete_text"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:layout_above = "@id/delete_text"

            android:layout_marginEnd = "120dp"
            android:id = "@+id/delete_icon"
            android:background="@drawable/icon_delete"
            >

        </ImageButton>
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="255dp"
         android:layout_alignParentEnd="true"
         android:src = "@drawable/background_sidebar">

     </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_alignParentEnd="true"
            android:src = "@drawable/background_sidebar_2">

        </ImageView>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>